    "react-dom": "^17.0.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@babel/eslint-plugin": "^7.13.15",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.6",
