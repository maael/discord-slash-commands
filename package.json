  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --ignore-path .gitignore --write .",
    "lint": " eslint --no-error-on-unmatched-pattern --ext .ts,.tsx --ignore-path .gitignore src scripts",
